            <Line BackgroundColor="Black" Margin="0, 0, 0, 0">
            </Line>
            <Grid ColumnDefinitions="*,*,*">
                <ImageButton Grid.Column="0" Source="friends.png"
                             >

                </ImageButton>
                <ImageButton Grid.Column="1" Source="rooms.png"
                         Command="{Binding OpenRooms}">

